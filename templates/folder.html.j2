<!DOCTYPE html>
<html>

<!-- Head imports Google Icons, the CSS stylesheet, bootstrap and initialises icon and title-->
<head>
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <title>Dashboard</title>
    <link rel="icon" type="image/x-icon" href="{{ url_for('static', filename='favicon.png') }}">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='styles.css') }}">
</head>

<body style="user-select: none;">
    <div class="flex-container" style = "margin-top: 60px;">

        <!-- Items in flexbox-1 are all buttons and the logo-->
        <div class="flexbox-1">
            <span class="material-symbols-outlined white noUserSelect"
                style="font-size: 3em; background-color: blue; border-radius: 0.2em;">
                storage
            </span>
            {% if read_only == 'false' and folderid is not none %}
            <button class="btn btn-primary" id="new-file-folder-btn">
                <i class="bi bi-file-earmark-plus"></i>
                New
            </button>
            <button class="btn btn-primary" id="share-btn">
                <i class="bi bi-file-earmark-plus"></i>
                Share
            </button>
            <form action="/api/delete_folder" method="post">
                <input type="hidden" name="folderid" value="{{ folderid }}">
                <button class="btn btn-primary" id="delete-folder-btn">
                    <i class="bi bi-trash"></i>
                    Delete Folder
                </button>
            </form>
            {% endif %}
            <a href="/dashboard" class="align-center small-gap flex button">
                <span class="material-symbols-outlined black">
                    home
                </span>
                <span class="main-font">Home</span>
            </a>
            <a href="/shared" class="align-center small-gap flex button">
                <span class="material-symbols-outlined black">
                    groups
                </span>
                <span class="main-font">Shared</span>
            </a>
        </div>

        <!-- Items in flexbox-2 is the directory bar, logout button and displays your files and folders with jinja2-->
        <div class="flexbox-2" style="position: relative;">
            <div class="align-center" style="display: flex; width: 80%; justify-content: space-between;">
                <span class="main-font" style="font-size: 2em;"><b>Dashboard</b></span>
                <form action="/api/logout" method="post">
                    <button type="submit" class="btn logout-button">
                        <span style="font-size: 1.5em;" class="main-font"><b>Logout</b></span>
                    </button>
                </form>
            </div>
            <br>
            <div class="background-light-grey align-center flex" style="border-radius: 0.5em; width: 80%; height: 2em;">
                <span class="main-font" style="margin-left: 0.5em;">
                    <b>
                        {% for parent in parents %}
                        {% if 'id' in parent %}
                        <a href="/folder/{{ parent['id'] }}">
                            {{ parent['name'] }}
                        </a>
                        {% else %}
                        {{ parent['name'] }}
                        {% endif %}
                        /
                        {% endfor %}
                    </b>
                </span>
            </div>
            <br>
            <div class="regular-gap flex flex-wrap">
                {% for folder in folders %}
                <a href="/folder/{{ folder['id'] }}"
                    class="background-light-grey align-center regular-gap inlineflex button" style="border-radius: 0.5em;">
                    <span class="material-symbols-outlined grey" style="font-size: 2.5em;">
                        folder
                    </span>
                    <span class="main-font" style="font-size: 2em;">{{ folder['name'] }}</span>
                </a>
                {% endfor %}
            </div>
            <br><br><br>
            <div class="regular-gap flex flex-wrap">
                {% for file in files %}
                <a href="/file/{{ file['id'] }}" class="background-light-grey align-center regular-gap inlineflex button"
                    style="border-radius: 0.5em;">
                    <span class="material-symbols-outlined grey" style="font-size: 2.5em;">
                        {% if file['type']=='Text' %}
                        description
                        {% else %}
                        draw
                        {% endif %}
                    </span>
                    <span class="main-font" style="font-size: 2em;">{{ file['name'] }}</span>
                </a>
                {% endfor %}
            </div>
        </div>
    </div>

    <!-- Modals for making new files and folders and sharing folders are implemented here-->
    <div class="modal" tabindex="-1" role="dialog" id="new-file-folder-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h3 class="modal-title">Create</h3>
            </div>
            <div class="modal-body">
                <h4>Create new folder</h4>
                <form action="/api/create_folder" method="post">
                    <input type="hidden" name="folderid" value="{{ folderid }}">
                    <input name="foldername" style = "width: 80%;" placeholder="Folder Name">
                    <button type="submit" class="btn btn-primary">
                        New
                    </button>
                </form>
                <h5 style="text-align: center;">Or</h5>

                <h4>Create new file</h4>
                <form action="/api/create_file" method="post">
                    <input type="hidden" name="folderid" value="{{ folderid }}">
                    <input name="filename" placeholder="File Name">
                    <select name="filetype">
                        <option>Text</option>
                        <option>Whiteboard</option>
                    </select>
                    <button type="submit" class="btn btn-primary">
                        New
                    </button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
    </div>

    <div class="modal" tabindex="-1" role="dialog" id="share-modal">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h3 class="modal-title">Share folder</h3>
            </div>
            <div class="modal-body">
                <form action="/api/share_folder" method="post">
                    <input type="hidden" name="folderid" value="{{ folderid }}">
                    <input name="shared_username" placeholder="Username">
                    <select name="permission">
                        <option>Read</option>
                        <option>Write</option>
                    </select>
                    <button type="submit" class = "btn btn-primary">
                        Share
                    </button>
                </form>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
    </div>

    <!-- Importing and using jquery and bootstrap bundle to show the modals after their corresponding button has been clicked, and implementing functionality to share link modal -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.getElementById('new-file-folder-btn')?.addEventListener('click', () => {
        const newFileFolderModal = new bootstrap.Modal(document.getElementById('new-file-folder-modal'));
        newFileFolderModal.show();
        });

        document.getElementById('share-btn')?.addEventListener('click', () => {
            const shareModal = new bootstrap.Modal(document.getElementById('share-modal'));
            shareModal.show();
        });
    </script>
</body>

</html>